<div class = "deck_heading"> 
  Deck: <%= @deck.deck_type %> 
</div>
<div class = "card">
  <%= @card.front %>
</div>
<div class = "guess_answer">
  <%if @guess%>
    <%if @guess.correct%>
      Correct!
    <%else%>
      Bummer :( You'll get it next time!
    <%end%>
      The answer is...
        <div class = "card">
          <%= @card.back %>
        </div>
    <%if @last %>
      <form action="../rounds/<%=@round.id%>" method = "get">
      <input type="submit" class = "button" value="Finish Round">
      </form>
    <%else%>
      <form action="/cards/<%=@next_card%>" method = "get">
      <input type="submit" class = "button" value="Next Card">
      </form>
      <br>
      or...
      <br>
      <form action="../rounds/<%=@round.id%>" method = "get">
      <input type="submit" class = "button" value="Finish Round">
      </form>
    <%end%>        
  <%else%>
    <form action="/cards/<%=@card.id%>" method = "post">
    What's your guess? 
    <input type="text" name="guess">
    <input type="submit" class = "button" value="Guess!">
    </form>  
  <%end%>
</div>
